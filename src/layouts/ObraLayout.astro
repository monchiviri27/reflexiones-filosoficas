---
import BaseLayout from './BaseLayout.astro';
import { getCollection } from 'astro:content';

interface Props {
  obra: any;
}

const { obra } = Astro.props;
const todasObras = await getCollection('obras');

// Encontrar obras relacionadas
const obrasRelacionadas = todasObras
  .filter(o => 
    o.id !== obra.id && 
    (o.data.autor === obra.data.autor || 
     o.data.temas_principales.some(t => obra.data.temas_principales.includes(t)))
  )
  .slice(0, 3);

// Formatear fecha
const fechaFormateada = obra.data.fecha.toLocaleDateString('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Renderizar el contenido
const { Content } = await obra.render();
---

<BaseLayout title={obra.data.titulo}>
  <article class="max-w-4xl mx-auto">
    <!-- Header de la obra -->
    <header class="mb-12">
      <div class="mb-4">
        <a href="/obras" class="text-filosofia-acento hover:underline">&larr; Volver a obras</a>
      </div>
      
      <h1 class="text-4xl md:text-5xl font-display font-bold text-filosofia-primario mb-4">
        {obra.data.titulo}
      </h1>
      
      <div class="flex flex-wrap items-center gap-4 mb-6">
        <div class="flex items-center gap-2">
          <span class="text-filosofia-secundario">Por</span>
          <a 
            href={`/autores/${obra.data.autor.toLowerCase().replace(/ /g, '-')}`}
            class="text-xl font-semibold text-filosofia-primario hover:text-filosofia-acento transition-colors"
          >
            {obra.data.autor}
          </a>
        </div>
        
        <span class="text-filosofia-secundario">•</span>
        <time datetime={obra.data.fecha.toISOString()} class="text-filosofia-secundario">
          {fechaFormateada}
        </time>
        
        <span class="text-filosofia-secundario">•</span>
        <span class="bg-filosofia-acento/10 text-filosofia-acento px-3 py-1 rounded-full text-sm font-medium">
          {obra.data.tipo}
        </span>
      </div>
      
      <!-- Cita destacada -->
      {obra.data.cita_destacada && (
        <blockquote class="cita-destacada text-xl text-gray-700 my-8">
          {obra.data.cita_destacada}
        </blockquote>
      )}
      
      <!-- Temas -->
      <div class="flex flex-wrap gap-2 mb-8">
        {obra.data.temas_principales.map((tema) => (
          <a 
            href={`/temas/${tema}`}
            class="badge-tema bg-filosofia-primario text-white hover:bg-filosofia-oscuro transition-colors"
          >
            {tema.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ')}
          </a>
        ))}
      </div>
      
      {obra.data.imagen && (
        <img 
          src={obra.data.imagen} 
          alt={`Ilustración para ${obra.data.titulo}`}
          class="w-full h-64 object-cover rounded-lg mb-8"
        />
      )}
    </header>
    
    <!-- Contenido completo (incluye texto + análisis) -->
    <div class="prose prose-lg max-w-none">
      <Content />
    </div>
    
    <!-- Obras relacionadas -->
    {obrasRelacionadas.length > 0 && (
      <section class="mt-16 pt-8 border-t">
        <h3 class="text-2xl font-display font-semibold text-filosofia-primario mb-6">
          Obras relacionadas
        </h3>
        <div class="grid md:grid-cols-3 gap-6">
          {obrasRelacionadas.map(obraRel => (
            <a 
              href={`/obras/${obraRel.id}`}
              class="card-obra p-5 hover:shadow-xl transition-all"
            >
              <h4 class="font-display font-semibold text-lg text-filosofia-primario mb-2">
                {obraRel.data.titulo}
              </h4>
              <p class="text-sm text-filosofia-secundario mb-3">
                {obraRel.data.autor}
              </p>
              <p class="text-sm text-gray-600 line-clamp-2">
                {obraRel.data.resumen}
              </p>
            </a>
          ))}
        </div>
      </section>
    )}
    
    <!-- Navegación -->
    <div class="mt-12 pt-8 border-t flex justify-between">
      <a href="/obras" class="text-filosofia-acento hover:underline">
        ← Ver todas las obras
      </a>
      <a href="/temas" class="text-filosofia-acento hover:underline">
        Explorar por temas →
      </a>
    </div>
  </article>
</BaseLayout>